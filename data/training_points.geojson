import geopandas as gpd
import pandas as pd
from shapely.geometry import Point
import random

# Random land cover classes and coordinates
data = {
    "nir": [random.randint(50, 255) for _ in range(50)],
    "red": [random.randint(20, 200) for _ in range(50)],
    "class": [random.choice(["Forest", "Water", "Urban"]) for _ in range(50)],
    "geometry": [Point(random.uniform(-180, 180), random.uniform(-90, 90)) for _ in range(50)]
}

gdf = gpd.GeoDataFrame(pd.DataFrame(data), geometry="geometry")
gdf.to_file("data/training_points.geojson", driver="GeoJSON")